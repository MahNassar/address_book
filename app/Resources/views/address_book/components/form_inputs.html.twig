<div class="col-sm-3">
    <div class="col-md-12 mb-3">
        <div class="form-group">
        <span class="btn btn-info col-md-12">
            <input type="file" name="photo" id="imgInp" onchange="readURL(this);">
        </span>
            <div class="col-md-12">
                <img src="{{ address_item is defined and address_item.image !="" ? asset('uploads/'~ address_item.image)   :asset("assets/images/user-default.jpg") }}"
                     class="img-thumbnail rounded mx-auto d-block"
                     id='img-upload'/>
            </div>
        </div>
    </div>

</div>

<div class="col-sm-9">
    <div class="input-group mb-4 col-sm-12">
        <div class="input-group-prepend">
            <span class="input-group-text" id="">First Name and Last Name</span>
        </div>
        <input type="text" name="firstName"
               value="{{ address_item is defined? address_item.firstName:'' }}"
               placeholder="First Name"
               class="form-control">
        <input type="text" name="lastName" placeholder="Last Name"
               class="form-control"
               value="{{ address_item is defined ?address_item.lastName:'' }}">
    </div>

    <div class="input-group mb-4 col-sm-12">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Street and number</span>
        </div>
        <input type="text" name="streetNumber" placeholder="Your street name and number -- EX: 22 XYZ st"
               value="{{ address_item is defined ? address_item.streetNumber :'' }}"
               class="form-control">
    </div>


    <div class="input-group mb-4 col-sm-9">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Zip</span>
        </div>
        <input type="text" name="zip"
               value="{{ address_item is defined ? address_item.zip:'' }}"
               class="form-control">
    </div>
    <div class="input-group mb-3 col-sm-9">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">City</span>
        </div>
        <input type="text" name="city"
               value="{{ address_item is defined ? address_item.city:'' }}"
               class="form-control">
    </div>
    <div class="input-group mb-3 col-sm-9">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Country</span>
        </div>
        <input type="text" name="country"
               value="{{ address_item is defined ? address_item.country:'' }}"
               class="form-control">
    </div>

    <div class="input-group mb-3 col-sm-9">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Phone Number</span>
        </div>
        <input type="text" name="phoneNumber"
               value="{{ address_item is defined ?  address_item.phoneNumber :'' }}"
               class="form-control">
    </div>

    <div class="input-group mb-3 col-sm-9">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Birthday</span>
        </div>

        <input type="date" name="birthday" id="birthday"
               value="{{ address_item is defined ? address_item.birthday|date("d/m/Y") :'' }}"
               class="form-control">
        {% if address_item is defined %}
            <input type="text" id="hide-birthday"
                   value="{{ address_item.birthday|date("d-m-Y") }}"
                   class="form-control">
        {% endif %}
    </div>

    <div class="input-group mb-3 col-sm-9">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Email</span>
        </div>
        <input type="text" name="email"
               value="{{ address_item is defined ? address_item.email :'' }} "
               class="form-control">
    </div>
</div>




